        <!-- TYPOGRAPHIC FORMATTING -->
        <section id="typographyFormatting">
            <header class="content-block bg-light-grey">
                <div class="container">
                    <h3>Typographic formatting</h3>
                    <p>Use the default tags or the same name classes to format text</p>
                    <p>Note there are some helper classes are also available for font colours, weights and transforms <a href="helper-classes.html#helpersTypography">here</a>.</p>
                </div>
            </header>
            <div class="content-block">
                <div class="container">
                    <p><strong>strong</strong> = <code>&lt;strong&gt;</code> or <code>.strong</code> or <code>.bold</code></p>
                    <p><em>italic</em> = <code>&lt;i&gt;</code> or <code>&lt;em&gt;</code> or <code>.em</code> or <code>.italic</code></p>
                    <p><small>small</small> = <code>&lt;small&gt;</code> or <code>.small</code></p>
                    <p><s>strikethrough</s> = <code>&lt;s&gt;</code> or <code>.s</code> or <code>.strikethrough</code></p>
                    <p><mark>highlight</mark> = <code>&lt;mark&gt;</code> or <code>.mark</code> or <code>.highlight</code></p>
                </div>
            </div>
        </section>


